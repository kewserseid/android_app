<?xml version="1.0"?>

<ScrollView
    android:background="@color/primary_material_light" tools:context="com.example.hannan.reservationsystem.rooms"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <RelativeLayout
            android:layout_height="?actionBarSize"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/backbtn"/>

        </RelativeLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textAllCaps="true"
            android:fontFamily="@string/abc_action_mode_done"
            android:textSize="30dp"
            android:text="rooms"/>


        <RelativeLayout
            android:background="@drawable/a"
            android:layout_height="150dp"
            android:layout_width="match_parent">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@string/hello_world"
                android:textSize="30sp"
                android:text="Single Bed"/>

            <Button
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="20dp" android:text="2000 birr"
                android:layout_alignParentBottom="true"/>

            <Button
                android:id="@+id/book1"
                android:background="#700"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp"
                android:text="Book"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:background="@drawable/b"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@string/hello_world"
                android:textSize="30sp"
                android:text="Double Bed with teras"/>

            <Button
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="20dp" android:text="3500 birr"
                android:layout_alignParentBottom="true"/>

            <Button
                android:id="@+id/book2"
                android:background="#700"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp" android:text="Book"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:background="@drawable/c"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@string/hello_world"
                android:textSize="30sp"
                android:text="Double Bed with Dinning"/>

            <Button
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:text="4000birr"
                android:layout_alignParentBottom="true"/>
            <Button
                android:id="@+id/book3"
                android:background="#700"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp" android:text="Book"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/d"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@string/hello_world"
                android:textSize="30sp"
                android:text="single Bed with Jakuzi"/>

            <Button
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:text="3500 birr"
                android:layout_alignParentBottom="true"/>
            <Button
                android:id="@+id/book4"
                android:background="#700"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp" android:text="Book"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:background="@drawable/f"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@string/hello_world"
                android:textSize="30sp" android:text="Single Bed"/>

            <Button
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:text="6000 birr"
                android:layout_alignParentBottom="true"/>
            <Button
                android:id="@+id/book5"
                android:background="#700"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp" android:text="Book"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:background="@drawable/master"
            android:layout_height="150dp" android:layout_width="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@string/hello_world"
                android:text="Master bed"
                android:textSize="30sp" />
            <Button
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:text="10000 birr"
                android:layout_alignParentBottom="true"/>
            <Button
                android:id="@+id/book6"
                android:background="#700"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp" android:text="Book"
                android:layout_alignParentBottom="true"/>



        </RelativeLayout>

    </LinearLayout>

</ScrollView>
